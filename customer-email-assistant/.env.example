# Gmail IMAP Configuration (Recommended)
GMAIL_EMAIL=your_gmail@gmail.com
GMAIL_APP_PASSWORD=your_app_password

# Gmail API Configuration (Alternative)
GMAIL_CLIENT_ID=your_gmail_client_id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token

# Gemini API (for reply generation)
GEMINI_API_KEY=your_gemini_api_key

# OpenAI API (backup for reply generation)
OPENAI_API_KEY=your_openai_api_key

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourApp
# or Firebase
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# Server Configuration
SERVER_PORT=8000
CLIENT_PORT=3000
CORS_ORIGINS=http://localhost:3000

# Email Classification Settings
CLASSIFICATION_MODEL=gemini-1.5-flash
REPLY_MODEL=gemini-1.5-flash